<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/card321">

    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="675dp"
        android:padding="15dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/postimgone"
            android:layout_width="351dp"
            android:layout_height="378dp"
            android:src="@mipmap/ic_launcher"
            app:srcCompat="@drawable/ic_baseline_add_a_photo_24" />

        <TextView
            android:id="@+id/posttitleone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="This is Demo Name"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/postshortdescone"
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="This is Email Name"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/postcatone"
            android:layout_width="237dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:text="Category of Post"
            android:textSize="25sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>